@model MVCWEB.Models.EventViewModel

<div class="modal fade" id="alerteDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:darkcyan">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5><font color="white">@Html.DisplayFor(modelItem => modelItem.titre)</font></h5>

            </div>

            <div class="modal-body">
                @*<div class="panel panel-flat">
                    <div class="panel-body">*@

                        <h5><b>Description:</b>@Html.DisplayFor(modelItem => modelItem.description)</h5>
                        <h5><b>Date de Debut:</b>@Html.DisplayFor(modelItem => modelItem.dateDebut)</h5>
                        <h5><b>Date de fin:</b>@Html.DisplayFor(modelItem => modelItem.dateFin)</h5>

                       
                        <!-- /basic radar chart -->
                    @*</div>
               </div>*@
        </div>
            <div class="modal-footer">
                @using (Html.BeginForm("DeleteEvent", "Home", new { id = Model.Id }, FormMethod.Get, new { enctype = "multipart/form-data" }))
                {
                    <input type="submit" value="Supprimer" class="btn btn-primary" />
                }
            </div>
    </div>
</div>
</div>