@model MVCWEB.Models.EvaluationViewModel

@if (ViewBag.role == "Qualité")
{
    ViewBag.Title = "EnqueteAuto";

    Layout = "~/Views/Shared/_Layout_Qualite.cshtml";
}
@if (ViewBag.role == "Agent Qualité_CustomerService")
{
    ViewBag.Title = "EnqueteAuto";

    Layout = "~/Views/Shared/_Layout_CustomerService.cshtml";
}
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" type="text/css" />

@section test{
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js" charset="utf-8"></script>

    <script type='text/javascript'>

		$( document ).ready(function() {
		    $('#planDate').datetimepicker({

		        format: 'YYYY-MM-DD HH:mm',
		        daysOfWeekDisabled: [0, 6],
		    });
		});

    </script>

    <div class="form-horizontal">
        <div class="row">

            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"> <b>Nom Complet d'enregistrement</b></font></h6>
            <div class="col-xs-8 date">
                @Html.EditorFor(model => model.enregistrementFullName, new { htmlAttributes = new { @class = "form-control", @id = "listen", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.enregistrementFullName, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-4 date" hidden>
                @Html.EditorFor(model => model.enregistrementUrl, new { htmlAttributes = new { @class = "form-control", @id = "listen2" } })
                @Html.ValidationMessageFor(model => model.enregistrementUrl, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-4 date" hidden>
                @Html.EditorFor(model => model.enregistrementDirectory, new { htmlAttributes = new { @class = "form-control", @id = "listen3" } })
                @Html.ValidationMessageFor(model => model.enregistrementDirectory, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Nom Agent:</b></font></h6>
            <div class="col-xs-4">

                @Html.EditorFor(model => model.agentName, new { htmlAttributes = new { @class = "form-control", @id = "nomAgent", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.agentName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"> <b>Date et temps d'évaluation</b></font></h6>
        <div class="col-xs-4 date" style="width:25%">
            <div class="input-group input-append date">
                <input type='text' id='planDate' name="planDate" class="form-control" value="01/06/2018 08:00" lang="fr" style="min-width: 100%" />
                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
        </div>
    </div>

    <div class="row" id="presentationRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Prise de contact et présentation de l'objet de l'appel</b></font></h6>

            <div class="col-xs-4">
                <select class="bootstrap-select" id="presentation" name="presentation" style="height: 25px;">

                    <option value="5">OK</option>
                    <option value="0">KO</option>
                    <option value="2.5">AA</option>
                    <option value="-5">NE</option>
                </select>
            </div>
        </div>
    </div>

    <br />
    <div class="row" id="respectScriptRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Respect du script d’appel </b></font></h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="respectScript" name="respectScript" style="height: 35px;">

                    <option value="15">OK</option>
                    <option value="0">KO</option>
                    <option value="7.5">AA</option>
                    <option value="-15">NE</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div class="row" id="traitementObjectionsRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Traitement des objections</b> </font> </h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="traitementObjections" name="traitementObjections" style="height: 45px;">
                    <option value="5">OK</option>
                    <option value="0">KO</option>
                    <option value="2.5">AA</option>
                    <option value="-5">NE</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row" id="exploitationOutilsRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Exploitation des outils</b> </font> </h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="exploitationOutils" name="exploitationOutils" style="height: 45px;">

                    <option value="5">OK</option>
                    <option value="0">KO</option>
                    <option value="2.5">AA</option>
                    <option value="-5">NE</option>

                </select>
            </div>
        </div>
    </div>
    <div class="row" id="HistorisationOutilsRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Historisation sur les outils à disposition</b> </font> </h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="HistorisationOutils" name="HistorisationOutils" style="height: 45px;">

                    <option value="15">OK</option>
                    <option value="0">KO</option>
                    <option value="7.5">AA</option>
                    <option value="-15">NE</option>

                </select>
            </div>
        </div>
    </div>
  
    <div class="row" id="discoursRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Discours et Maitrise du Français</b></font></h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="discours" name="discours" style="height: 45px;">
                    <option value="10">OK</option>
                    <option value="0">KO</option>
                    <option value="5">AA</option>
                    <option value="-10">NE</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row" id="debitRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Débit</b></font></h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="debit" name="debit" style="height: 45px;">
                    <option value="3">OK</option>
                    <option value="0">KO</option>
                    <option value="1.5">AA</option>
                    <option value="-3">NE</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row" id="intonationRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Intonation</b></font></h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="intonation" name="intonation" style="height: 45px;">
                    <option value="3">OK</option>
                    <option value="0">KO</option>
                    <option value="1.5">AA</option>
                    <option value="-3">NE</option>
                </select>
            </div>
        </div>
    </div>

<div class="row" id="ecouteReformulationRow">
    <div class="col-1">
        <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Ecoute active et reformulation</b></font></h6>
        <div class="col-xs-4">
            <select class="bootstrap-select" id="ecouteReformulation" name="ecouteReformulation" style="height: 45px;">
                <option value="5">OK</option>
                <option value="0">KO</option>
                <option value="2.5">AA</option>
                <option value="-5">NE</option>
            </select>
        </div>
    </div>
</div>
   
    <div class="row" id="priseCongeRow">
        <div class="col-1">
            <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Prise de congé</b></font></h6>
            <div class="col-xs-4">
                <select class="bootstrap-select" id="priseConge" name="priseConge" style="height: 45px;">
                    <option value="5">OK</option>
                    <option value="0">KO</option>
                    <option value="2.5">AA</option>
                    <option value="-5">NE</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div class="row" id="commentaireRow">
        <div class="col-xs-10">
            <div class="form-group">
                <h6 style="width:25%" class="col-xs-1 control-label"><font color="black"><b>Commentaire</b></font></h6>
                <textarea id="commentaire" name="commentaire" rows="5" cols="5" class="form-control" placeholder="Entrer votre commentaire"></textarea>
            </div>
        </div>
    </div>
    <br /><br />
    <center>
        <div class="text-md-center" id="imedSaveRow">
            <button type="submit" id="Calcul" class="btn bg-teal-400" data-toggle="modal">Evaluer Enregistrement <i class="icon-check position-fixed"></i></button>
            <button type="submit" id="Save" class="btn bg-danger-400" data-title="Sauvegarder Alerte">Sauvegarder et Envoyer Mail <i class="icon-arrow-right14 position-fixed"></i></button>

        </div>
    </center>
    <div id="view"></div>
    <br /><br />

    <script>
        $('#datePicker')
               .daterangepicker({
                   singleDatePicker: true,
                   autoApply: true,
                   opens: 'left',

                   locale: {
                       setDate: new Date(),
                       format: 'DD/MM/YYYY hh:mm:ss',
                       "daysOfWeek": [
            "Dim",
            "Lun",
            "Mar",
            "Mer",
            "Jeu",
            "Ven",
            "Sam"
                       ],
                       "monthNames": [
                           "Jan",
                           "Fev",
                           "Mar",
                           "Avr",
                           "Mai",
                           "Ju",
                           "Jui",
                           "Aou",
                           "Sep",
                           "Oct",
                           "Nov",
                           "December"
                       ],
                   },
                   lan: 'fr',
                   autoclose: true,
               })
               .on('changeDate', function (e) {
                   $('#datepicker').hide();
               });

    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(document).on("click", "#Calcul", function () {

                $.ajax({
                    url: '/EvaluationServiceClientAuto/CalculEnqueteAuto',
                    type: 'GET',
                    datatype: 'json',
                    data: {
                        nomAgent: $("#nomAgent").val(),
                        planDate: $("#planDate").val(),

                        presentation: $("#presentation").val(),
                        respectScript: $("#respectScript").val(),
                        traitementObjections: $("#traitementObjections").val(),
                        exploitationOutils: $("#exploitationOutils").val(),
                        HistorisationOutils: $("#HistorisationOutils").val(),
                        discours: $("#discours").val(),
                        debit: $("#debit").val(),
                        intonation: $("#intonation").val(),
                        ecouteReformulation: $("#ecouteReformulation").val(),
                        priseConge: $("#priseConge").val(),

                        commentaire: $("#commentaire").val(),
                         enregistrement: $("#listen").val(),
                         enregistrementUrl: $("#listen2").val(),
                         enregistrementDirectory: $("#listen3").val()
                    },
                    async: true,
                    success: function (data) {
                        $('#view').html(data);
                        $('#EnqueteAutoResult').modal('show');


                    },

                });
            })
        })

        $(document).ready(function () {
            $(document).on("click", "#Save", function () {

                $.ajax({
                    url: '/EvaluationServiceClientAuto/SaveEvalEnqueteAuto',
                    type: 'GET',
                    datatype: 'json',
                    data: {
                        nomAgent: $("#nomAgent").val(),
                        planDate: $("#planDate").val(),

                        presentation: $("#presentation").val(),
                        respectScript: $("#respectScript").val(),
                        traitementObjections: $("#traitementObjections").val(),
                        exploitationOutils: $("#exploitationOutils").val(),
                        HistorisationOutils: $("#HistorisationOutils").val(),
                        discours: $("#discours").val(),
                        debit: $("#debit").val(),
                        intonation: $("#intonation").val(),
                        ecouteReformulation: $("#ecouteReformulation").val(),
                        priseConge: $("#priseConge").val(),

                        commentaire: $("#commentaire").val(),
                        enregistrement: $("#listen").val(),
                        enregistrementUrl: $("#listen2").val(),
                        enregistrementDirectory: $("#listen3").val()
                    },
                    async: true,
                    success: function (data) {
                        $('#view').html(data);
                        $('#EnvoiMailResult').modal('show');


                    },

                });
            })
        })

    </script>

}

