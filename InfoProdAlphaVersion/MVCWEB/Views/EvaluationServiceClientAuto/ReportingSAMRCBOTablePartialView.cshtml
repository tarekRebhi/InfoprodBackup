        var values = ["@Model.identificationClient","@Model.pertinenceReponse","@Model.historisation","@Model.FCR","@Model.discours"];

        var valuesList = [];
        $.each(values, function (i, t)
        {
            if (parseFloat(t) >= 0) {
                //var vv = t.toString();
                //var val = parseFloat(vv.replace(",","."));
                var tt = Math.round(parseFloat(t), 3);
                valuesList.push(tt);
            }
          else{
                valuesList.push(null);
            }
        })
