@model MVCWEB.Models.EvaluationEvaluationSCAutoViewModel
<div class="modal fade" id="EnqueteAutoResult" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content" style="background-image:url('../../Content/template/Layout 1/.JPG');">
            <div class="modal-header" style="background-color:#26A69A;">
                <button type="button" id="fermer" class="close" data-dismiss="modal">&times;</button>
                <h5><font color="white">Resultat : Evaluation Enquete Auto</font></h5>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-lg-6">
                        <h6><font color="black"> <b>Date et temps d'évaluation</b></font></h6>
                    </div>
                    <div class="col-lg-4">
                        <a><h6>@Html.DisplayFor(modelItem => modelItem.dateTempEvaluation)</h6></a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Nom Agent:</b></font></h6>
                        <div class="col-lg-4">
                            <a><h6>@Html.DisplayFor(modelItem => modelItem.agentName)</h6></a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Présentation de l'objet de l'appel</b></font></h6>

                        <div class="col-xs-4">
                            @if (Model.presentation >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.presentation)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Respect du script d’appel</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.respectScript >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.respectScript)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Traitement des objections</b> </font> </h6>
                        <div class="col-xs-4">
                            @if (Model.traitementObjections >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.traitementObjections)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Exploitation des outils</b></font> </h6>
                        <div class="col-xs-4">
                            @if (Model.exploitationOutils >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.exploitationOutils)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Historisation sur les outils à disposition</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.HistorisationOutils >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.HistorisationOutils)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Discours et Maitrise du Français</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.discours >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.discours)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Débit</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.debit >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.debit)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Intonation</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.intonation >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.intonation)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Ecoute active et reformulation</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.ecouteReformulation >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.ecouteReformulation)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
              
                <div class="row">
                    <div class="col-1">
                        <h6 style="width:50%" class="col-xs-1 control-label"><font color="black"><b>Prise de congé</b></font></h6>
                        <div class="col-xs-4">
                            @if (Model.priseConge >= 0)
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">@Html.DisplayFor(modelItem => modelItem.priseConge)</h6></a>
                            }
                            else
                            {
                                <a><h6 style="width:35%" class="col-xs-1 control-label">---</h6></a>
                            }
                        </div>
                    </div>
                </div>
                <br />
                @{

                    String str = Model.pourcentageNotes.ToString("N2");
                }

                <p>
                    <h5 style="text-align:center"><b>Score: <font color="red">@str %</font></b> </h5>
                </p>
                <div class="text-right">

                </div>

            </div>

        </div>
        <div class="modal-footer" style="background-color:#26A69A;">
            <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>


        </div>
    </div>
</div>

