@model Domain.Entity.GrilleEvaluationBO
@{

    Layout = "~/Views/Shared/_Layout_Qualite.cshtml";
}

@section test{

    <!-- Basic layout-->


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

     
            <div class="panel panel-flat">
                <div class="panel-heading">

                    <div class="heading-elements">
                        <ul class="icons-list">
                            <li><a data-action="collapse"></a></li>
                            <li><a data-action="reload"></a></li>
                            <li><a data-action="close"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="panel-body">

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @{
                            List<SelectListItem> list1 = new List<SelectListItem>();
                            list1.Add(new SelectListItem { Text = "OK", Value = "5" });
                            list1.Add(new SelectListItem { Text = "KO", Value = "0" });

                            List<SelectListItem> list2 = new List<SelectListItem>();
                            list2.Add(new SelectListItem { Text = "OK", Value = "6" });
                            list2.Add(new SelectListItem { Text = "KO", Value = "0" });

                            List<SelectListItem> list3 = new List<SelectListItem>();
                            list3.Add(new SelectListItem { Text = "OK", Value = "6" });
                            list3.Add(new SelectListItem { Text = "KO", Value = "0" });
                            list3.Add(new SelectListItem { Text = "AA", Value = "3" });

                            List<SelectListItem> list4 = new List<SelectListItem>();
                            list4.Add(new SelectListItem { Text = "OK", Value = "5" });
                            list4.Add(new SelectListItem { Text = "KO", Value = "0" });
                            list4.Add(new SelectListItem { Text = "AA", Value = "2,5" });

                            List<SelectListItem> list5 = new List<SelectListItem>();
                            list5.Add(new SelectListItem { Text = "OK", Value = "4" });
                            list5.Add(new SelectListItem { Text = "KO", Value = "0" });
                            list5.Add(new SelectListItem { Text = "AA", Value = "2" });
                            list5.Add(new SelectListItem { Text = "NE", Value = "-4" });
                        }
