@model Domain.Entity.Alerte

@Html.AntiForgeryToken()
<div class="modal fade" id="modifier" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
       
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <p> Vouez étes sure de supprimer l'alerte  @Html.DisplayFor(modelItem => modelItem.description)</p>
            </div>
            @*<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>*@
            @using (Html.BeginForm("Delete", "Alerte", new { id = Model.Id }, FormMethod.Get, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
