@model IEnumerable<MVCWEB.Models.AlerteViewModel>

@{
    ViewBag.Title = "IndexAgentManagerReciver";
    Layout = "~/Views/Shared/_Layout_user.cshtml";
}
@section test{



    <div class="panel panel-white">
        <div class="panel-heading">
            <h6 class="panel-title text-semibold">Liste des Alertes récues  par  le Manager</h6>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        <table class="table table-striped media-library table-lg">
            <thead>
                <tr>
                    <th><input type="checkbox" class="styled"></th>
                    <th></th>
                    <th>titre</th>
                    <th>Description</th>
                    <th>Sender</th>
                    <th>Reciver</th>
                    @*<th class="text-center">Actions</th>*@

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="styled"></td>
                        <td></td>

                        <td>
                            @Html.DisplayFor(modelItem => item.titreAlerte)
                        </td>

                        <td>

                            @Html.DisplayFor(modelItem =>
                            item.description)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem =>
                            item.senderName)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem =>
                            item.reciverName)
                        </td>
                        @*<td class="text-center">
                            <ul class="icons-list">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Delete", "Delete", new { id = item.Id }) </li>

                                    </ul>
                                </li>
                            </ul>
                        </td>*@
                    </tr>


                }

            </tbody>
        </table>
    </div>
}
