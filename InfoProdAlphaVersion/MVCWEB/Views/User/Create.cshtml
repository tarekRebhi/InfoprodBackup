                    @Html.ValidationMessageFor(model => model.logEntree, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.logSortie, htmlAttributes: new { @class = "control-label col-md-2" })
