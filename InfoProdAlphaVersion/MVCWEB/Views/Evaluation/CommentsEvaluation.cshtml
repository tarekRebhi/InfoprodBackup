@model MVCWEB.Models.EvaluationViewModel

<div id="commentsFile" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#26A69A;">
                <button type="button" id="fermer" data-id="@Model.commentaireQualite" class="close" data-dismiss="modal">&times;</button>
                <h5><font color="white">Details : Commentaires</font></h5>
            </div>
            <div class="modal-body">
                <p>
                    <h10>
                        <b>Commentaire du Qualité :</b><br /><br />
                        <font color="black">@Html.DisplayFor(modelItem => modelItem.commentaireQualite)</font>
                    </h10>
                </p>
                <br /><br /><br />
                <p>
                    <h10>
                        <b>Réponse du Collaborateur  :</b><br /><br />
                        <font color="black">@Html.DisplayFor(modelItem => modelItem.commentaireAgent)</font>
                    </h10>
                </p>              
            </div>

            <div class="modal-footer">
                <button type="button" class="btn bg-teal-400" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

