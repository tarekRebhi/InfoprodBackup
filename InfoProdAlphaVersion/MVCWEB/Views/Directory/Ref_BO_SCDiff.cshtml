@if (ViewBag.role == "Qualité")
{
    ViewBag.Title = "Ref_BO_SCDiff";

    Layout = "~/Views/Shared/_Layout_Qualite.cshtml";
}
@if (ViewBag.role == "Agent Qualité_Diffusion")
{
    ViewBag.Title = "Ref_BO_SCDiff";

    Layout = "~/Views/Shared/_Layout_Diffusion.cshtml";
}
@section test{



    <div class="panel panel-white">
        <div class="panel-heading">
            <h6 class="panel-title text-semibold">Grille d'écoute et Référentiel Back Office Service Client Diffusion GISI / ETAI / ROL / GM </h6>
            <div class="heading-elements">
                <ul class="icons-list">
