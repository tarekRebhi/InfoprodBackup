    <script type="text/javascript">

        $(document).ready(function () {
            $(document).on("click", "#imedSave", function () {

                //alert(fin);
                $('#explore1').hide();

                $('#loadimage').show();

                $.ajax({
                    url: '/Directory/FindDiffusion2',
                    type: 'GET',
                    datatype: 'json',
                    data: {
                        utilisateurs: $("#IdHermeses").val(),
                        //date: $("#datePicker").val(),
                        pseudoNames: $("#PseudoName").val(),
                        start: debut,
                        end: fin
                    },
                    async: true,
                    success: function (data) {
                        $('#explore1').html(data);
                        $('#errorFile').modal('show');
                        $('#errorFile2').modal('show');
                        $('#errordate').modal('show');

                        //alert("utilisateur"+" "+$("#typeGenerator").val()+" "+""+ $("#datePicker").val())
                    },
                    complete: function () {
                        $('#loadimage').hide();
                        $('#explore1').show();

                    }
                });
            })
        })
    </script>
