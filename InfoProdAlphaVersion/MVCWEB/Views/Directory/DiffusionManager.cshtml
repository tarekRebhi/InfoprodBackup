    </script>
    <script>
        $(document).ready(function () {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetIdHermes", "Directory")',
                dataType: 'json',
                data: {
                    PseudoNameSelected: $("#PseudoName").val()
                },
                success: function (IdHermesesList) {
                    $.each(IdHermesesList, function (i, t) {
                        $("#IdHermeses").append('<option value="' + t.Value + '">' +
                         t.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })

        $('#PseudoName').on('change', function () {
            $("#IdHermeses").empty();
           $.ajax({
                type: 'POST',
                url: '@Url.Action("GetIdHermes")',
                dataType: 'json',
                data: {
                    PseudoNameSelected: $("#PseudoName").val()
                },
                success: function (IdHermesesList) {
                    $.each(IdHermesesList, function (i, t) {
                        $("#IdHermeses").append('<option value="' + t.Value + '">' +
                         t.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    </script>
